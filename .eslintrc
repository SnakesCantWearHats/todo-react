{
	"extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
	"parser": "babel-eslint",
	"plugins": ["react-hooks"],
	"env": {
		"browser": true,
		"node": true
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true,
			"modules": true
		}
	},
	"rules": {
		"react/prop-types": [2, { "ignore": ["children"] }],
		"react-hooks/rules-of-hooks": "error",
		"react-hooks/exhaustive-deps": "warn"
	}
}